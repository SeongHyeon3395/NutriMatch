<resources>

  <!-- Android 12+ SplashScreen: hide app icon and keep a plain background. -->
  <style name="AppTheme" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@android:color/white</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_empty</item>
    <item name="postSplashScreenTheme">@style/AppTheme.PostSplash</item>
  </style>

  <style name="AppTheme.PostSplash" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
  </style>

</resources>
